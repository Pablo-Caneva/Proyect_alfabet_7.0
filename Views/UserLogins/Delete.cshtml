@model Proyect_alfabet_7._0.Models.UserLogin

@{
    ViewData["Title"] = "Delete";
}

<h1 style="color: red; font-weight: bold;">Borrar usuario</h1>

<h3>¿Seguro quiere borrar este usuario?</h3>
<h3 style="color: red;">Esta acción es irreversible</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type ="submit" class="btn btn-outline-secondary">Confirmar</button>
        
        <a asp-action="Index">
            <button type="button" class="btn btn-outline-secondary">Atrás</button>
        </a>
    </form>
</div>
