@{
    int id = (int)ViewData["id"];
    int module = (int)ViewData["module"];
    int lesson = (int)ViewData["lesson"];
    string tipoDeDato = lesson.GetType().Name;
}
<head>
    <style>
        body {
            background: hsl(328, 5%, 75%);
        }
    </style>
</head>
<body>
    <audio autoplay style="display: none;">
        <source src="~/Content/wrong.mp3" type="audio/mp3" />
    </audio>
    <div class="login d-flex justify-content-center align-content-center">
        <div><i class="fas fa-times-circle" style="font-size: 3em; color: red;"></i></div>
    </div>
    <a asp-controller="Content" asp-action="Module" asp-route-id="@id" asp-route-module="@module" asp-route-lesson="@lesson">
        <button type="button" id="redirectButton" style="display: none;"></button>
    </a>

    <script>
        setTimeout(function () {
            document.getElementById('redirectButton').click();
        }, 3000);
    </script>
</body>